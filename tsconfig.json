{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "lib": ["ES2021", "dom"],
        "declaration": false,
        "rootDir": "src",
        "strict": true,
        "strictPropertyInitialization": false,
        "strictNullChecks": false,
        "sourceMap": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "experimentalDecorators": true
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
